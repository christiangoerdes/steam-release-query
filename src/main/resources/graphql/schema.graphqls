type Query {
    releases(page: Int, pageSize: Int): PaginatedData
    releasesByName(title : String!, page: Int, pageSize: Int): PaginatedData
    releasesByRating(rating : String!, page: Int, pageSize: Int): PaginatedData
    releasesBy(field : ReleaseFields!, page: Int, pageSize: Int): PaginatedData
}

type PaginatedData {
    pageInfo: PageInfo!
    items: [Release]
}

type PageInfo {
    page: Int!
    size: Int!
    total: Int!
}

type Release {
    title: String
    link: String
    release: String
    peakPlayers: Int
    positiveReviews: Int
    negativeReviews: Int
    totalReviews: Int
    rating: String
}

enum ReleaseFields {
    title
    link
    release
    peakPlayers
    positiveReviews
    negativeReviews
    totalReviews
    rating
}